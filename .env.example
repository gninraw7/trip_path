# ==============================
# Trip-Path 환경변수 설정
# ==============================

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=trippath
DATABASE_USER=trippath
DATABASE_PASSWORD=trippath_secret

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_ACCESS_SECRET=your-access-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_ACCESS_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=2592000

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/oauth/callback

# OAuth - Kakao
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
KAKAO_CALLBACK_URL=http://localhost:3000/oauth/callback

# OAuth - Naver
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
NAVER_CALLBACK_URL=http://localhost:3000/oauth/callback

# External APIs
KAKAO_MAPS_API_KEY=
GOOGLE_MAPS_API_KEY=

# Email (AWS SES)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@trip-path.com

# S3 (Object Storage)
S3_BUCKET=trip-path-uploads
S3_REGION=ap-northeast-2
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# App
NODE_ENV=development
API_PORT=4000
API_PREFIX=v1
CORS_ORIGIN=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000/v1
NEXT_PUBLIC_WS_URL=ws://localhost:4000/v1/ws
NEXT_PUBLIC_APP_URL=http://localhost:3000
